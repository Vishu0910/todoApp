
<h1>Lists</h1>

<table class='table table-boredered'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-secondary">
          <td class="striker"><%= link_to list.title, edit_list_path(list) %></td>
          <td><%= list.description %></td>
          <td>
          <center>
          <%= form_for(list) do |f| %>
          <%= f.text_field :description, type: 'hidden' %>
          <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden'%>
          <%= f.submit "uncross", class: 'btn btn-outline-secondary btn-sm'%>
          <% end %>
          </center>
          </td>
         <!-- <td><%= link_to 'Show', list %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td> -->
          <td><%= link_to 'Delete', list,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <%else%>
        <tr>
          <td><%= link_to list.title, edit_list_path(list) %></td>
          <td><%= list.description %></td>
              <td>
          <center>
          <%= form_for(list) do |f| %>
          <%= f.text_field :description, type: 'hidden' %>
          <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden'%>
          <%= f.submit "cross", class: 'btn btn-outline-secondary btn-sm'%>
          <% end %>
          </center>
          </td>
          <!--<td><%= link_to 'Show', list %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td>-->
          <td><%= link_to 'Delete', list,class: 'btn btn-outline-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

